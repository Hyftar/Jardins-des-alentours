<%= form_with model: @market, url: [@garden, @market] do |f| %>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <%= hidden_field_tag "market[garden_variety]", @garden_variety.id %>
  <div class="field">
    <%= f.text_field :unit, list: "unitList" %>
    <datalist id="unitList">
      <option value="unit"></option>
      <option value="pound"></option>
      <option value="kilo"></option>
      <option value="bunch"></option>
    </datalist>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= number_field(:price, nil, min: 0, max: 999.99, step: 0.01) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
