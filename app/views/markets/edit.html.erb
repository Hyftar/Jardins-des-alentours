<div class="container market_update">
  <h2><%= t('garden.edit_market') %></h2>
  <h3><%= @garden_variety.variety.name %></h3>
  <%= form_with model: @market, url: [@garden, @market] do |f| %>
    <div class="field">
      <%= f.label :quantity %><br>
      <%= f.text_field :quantity %>
    </div>
    <%= hidden_field_tag "market[is_active]", "true" %>
    <div class="field">
      <%= f.text_field :unit, list: "unitList", :required => 'required' %>
      <datalist id="unitList">
        <option value="unit"></option>
        <option value="pound"></option>
        <option value="kilo"></option>
        <option value="bunch"></option>
      </datalist>
    </div>
      <div class="field">

      <%= f.label :price %><br>
      <%= f.number_field :price, min: 0, max: 999.99, step: 0.05, placeholder: t('garden.set_price') %>
    </div>
    <div class="actions">
      <%= f.submit t('garden.submits.edit_market'), class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="direct-back">
    <%= link_to t('garden.go_back'), garden_path(@market.garden_variety.garden), class: "btn" %>
  </div>
</div>
