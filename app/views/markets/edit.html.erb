<%= form_with model: @market, url: [@garden, @market] do |f| %>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <%= hidden_field_tag "market[is_active]", "true" %>
  <div class="field">
    <%= f.text_field :unit, list: "unitList" %>
    <datalist id="unitList">
      <option value="unit"></option>
      <option value="pound"></option>
      <option value="kilo"></option>
      <option value="bunch"></option>
    </datalist>
  </div>
    <div class="field">

    <%= f.label :price %><br>
    <%= f.number_field(:price, min: 0, max: 999.99, step: 0.05) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<td><%= link_to 'go back', garden_path(@market.garden_variety.garden) %></td>
