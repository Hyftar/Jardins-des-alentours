<div class="container market_notification_create">
  <h2><%= t('garden.be_notified') %></h2>
  <h3><%= @market.garden_variety.variety.name %></h3>
  <h2><%= t('garden.for_garden') %></h2>
  <h3><%= @garden.name %></h3>
  <%= form_with model: @market_notification, url: [@garden, @market, @market_notification] do |f| %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, :required => 'required', placeholder: t('garden.enter_email') %>
    </div>
    <%= hidden_field_tag "market_notification[market]", @market.id %>
    <%= hidden_field_tag "market_notification[garden]", @garden.id %>
    <div class="actions">
      <%= f.submit t('garden.submits.add_market'), class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="direct-back">
    <%= link_to t('garden.go_back'), garden_path(@garden), class: "btn" %>
  </div>
</div>
