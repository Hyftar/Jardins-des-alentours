<div class="columns flex-centered">
  <div class="column col-3">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, t('devise.sessions.email'), :class => 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-input' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :first_name, t('devise.registrations.first_name').titleize, :class => 'form-label' %>
        <%= f.text_field :first_name, :class => 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :last_name, t('devise.registrations.last_name'), :class => 'form-label' %>
        <%= f.text_field :last_name, :class => 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :password, t('devise.sessions.password'), :class => 'form-label' %> <i>(<%= t('devise.registrations.leave_blank_if') %>)</i>
        <%= f.password_field :password, autocomplete: "new-password", :class => 'form-input' %>
        <% if @minimum_password_length %>

          <em><%= @minimum_password_length %> <%= t('devise.registrations.min_char') %></em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, t('devise.registrations.password_confirmation'), :class => 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-input' %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password, t('devise.registrations.current_password'), :class => 'form-label' %>
        <i>(<%= t('devise.registrations.need_current_pass') %>)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-input' %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.registrations.update_btn'), :class => 'btn btn-submit' %>
      </div>
    <% end %>

    <p><%= t('devise.registrations.unhappy') %>
      <%= button_to t('devise.registrations.cancel_btn'), registration_path(resource_name),
                    data: {confirm: "Are you sure?"}, method: :delete, :class => 'btn' %></p>

    <%= link_to t('devise.registrations.back'), :back, :class => 'text-light' %>
  </div>
</div>


