<div class="columns flex-centered login-main">
  <div class="column col-3">
    <h2><%= t('devise.passwords.forgot_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, t('devise.sessions.email'), :class => 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-input' %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.send_reset_password'), :class => 'btn btn-submit' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
