<div class="columns flex-centered">
  <div class="column login-helpers">
    <%- if controller_name != 'sessions' %>
      <%= link_to t('landing_page.log_in').titleize, new_session_path(resource_name), :class => 'text-light' %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t('landing_page.register').titleize, new_registration_path(resource_name), :class => 'text-light' %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('devise.passwords.forgot_password'), new_password_path(resource_name), :class => 'text-light' %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t('devise.mailer.confirmation_instructions.link'), new_confirmation_path(resource_name), :class => 'text-light' %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to t('devise.mailer.unlock_instructions.link'), new_unlock_path(resource_name), :class => 'text-light' %>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
                    omniauth_authorize_path(resource_name, provider), :class => 'text-light' %>
      <% end %>
    <% end %>
  </div>
</div>

