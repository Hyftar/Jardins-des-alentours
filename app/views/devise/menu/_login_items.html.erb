<% if user_signed_in? %>
  <%= link_to(edit_user_registration_path, class: 'btn btn-link text-light') do %>
    <%= t('landing_page.account').titleize %>
  <% end %>

  <%= link_to(destroy_user_session_path, method: :delete, class: 'btn btn-link text-light') do %>
    <%= t('landing_page.log_out').titleize %>
  <% end %>
<% else %>
  <%= link_to(new_user_session_path, class: 'btn btn-link text-light') do %>
    <%= t('landing_page.log_in').titleize %>
  <% end %>

  <%= link_to(new_user_registration_path, class: 'btn btn-link text-light') do %>
    <%= t('landing_page.register').titleize %>
  <% end %>
<% end %>
