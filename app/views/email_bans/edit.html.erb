<div class="container email_ban_modification">
  <h2><%= t('email_bans.update_ban') %></h2>
  <%= form_with model: @email_ban do |f| %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, :required => 'required' %>
    </div>
    <div class="field">
      <%= f.label :banned_until %><br>
      <%= f.datetime_field :banned_until, min: Date.today, :required => 'required' %>
    </div>
    <div class="field">
      <%= f.label :reason %><br>
      <%= f.text_area :reason, :required => 'required', :rows => 5 %>
    </div>
    <div class="actions">
      <%= f.submit t('email_bans.update'), class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="direct-back">
    <%= link_to t('email_bans.return_index'), email_bans_path(), class: "btn" %>
  </div>
</div>
